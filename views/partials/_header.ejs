<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/login">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <% if (userId) { %>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        </div>
      <div class="navbar-collapse nav justify-content-end">
        <a>Logged in As: <%= userId %>! &nbsp</a>
        <form method="POST" action="/logout" class="form-inline">
          <div class="form-group mb-2">
            <button type="logout" class="btn btn-outline-light">Logout</button>
          </div>
        </form>
      </div>
    <% } else { %>
      <div class="navbar-collapse nav justify-content-end">
        <a class="nav-item nav-link" style="text-decoration: none; color: seashell;" href="/register">Register</a>
        <form method="GET" action="/login">
          <button type="login" class="btn btn-outline-light">Login</button>
        </form>
      </div>
      </div>
    <% } %>
  </nav>
</header>